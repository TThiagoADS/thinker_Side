model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  @@map("users")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  
  products  Product[]
  @@map("categories")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       String
  description String
  banner      String
  amount      Int
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())

  category    Category @relation(fields: [category_id], references: [id])
  category_id String
  items       Item[]

  @@map("products")
}

model Item {
  id         String   @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  product_id String

  @@map("items")
}
